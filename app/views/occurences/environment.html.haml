
- block occurence.name do |link|
  - link.to 'Summary /', occurence
  - link.to 'Backtrace /', [:backtrace, occurence]     if occurence.backtrace?
  - link.to 'Environment /', [:environment, occurence] if occurence.properties?
  - link.to ("#{error.occurences.count} other occurences", error, :class => "other"){true} if error.occurences.count > 1
  
  - if occurence.properties?
    %table.table
      %tr
        %th.select Property
        %th Value
      - occurence.properties.each do |name, value|
        %tr
          %td.select=name
          %td=value

- actions do |link|
  - if error.closed
    - link.to ('Mark as not closed', error_path(error, :error => {:closed => '0'}), :method => :put, :class => "button markNotClosed")
  - else
    - link.to ('Mark as closed', error_path(error, :error => {:closed => '1'}), :method => :put, :class => "button markClosed")
